###
# kubernetes system config
#
# The following values are used to configure the kube-apiserver
#

# The address on the local server to listen to.
KUBE_API_ADDRESS="--insecure-bind-address={{k8s_apiserver_insecure_address}}{% if k8s_secured %} --bind-address=0.0.0.0{% endif %} --advertise-address={{k8s_public_ipv4}}"

# The port on the local server to listen on.
KUBE_API_PORT="--insecure-port={{k8s_apiserver_insecure_port}}{% if k8s_secured %} --secure-port={{k8s_apiserver_secure_port}}{% endif %}"

# Comma separated list of nodes in the etcd cluster
KUBE_ETCD_SERVERS="--etcd-servers={{k8s_etcd_servers}}"

# default admission control policies
KUBE_ADMISSION_CONTROL="--admission-control={{k8s_admission_control|join(',')}}"

# Add your own!
KUBE_API_ARGS="{{k8s_apiserver_args|default('')}}"



