---
apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: kube-addon-manager
  namespace: kube-system
  labels:
    app: kube-addon-manager
spec:
  replicas: 1
  selector:
    matchLabels:
      app: kube-addon-manager
  template:
    metadata:
      labels:
        app: kube-addon-manager
    spec:
      hostNetwork: true
      containers:
      - name: kube-addon-manager
        image: gcr.io/google-containers/kube-addon-manager:v6.4
        imagePullPolicy: IfNotPresent
        volumeMounts:
        - name: addons
          mountPath: '{{k8s_conf_dir}}'
          readOnly: true
      volumes:
      - name: addons
        hostPath:
          path: '{{k8s_conf_dir}}'
